<div class="container">
    


    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @article %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
                <div class="row mb-3">
                    <%= f.label :title, class: "text-light col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="row mb-3">
                    <%= f.label :description, class: "text-light col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="mb-3 col-2">
                        <%= f.submit class: "btn btn-outline-light btn-lg" %>
                    </div>
                </div>

            <% end %>
        </div>
        <div class="mb-3 text-center">
            <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info" %>
        </div>
        
    </div>
</div>