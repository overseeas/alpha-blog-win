<div class="container">

    <div class="row justify-content-center">
        <div class="col-10">
            <%= render "shared/errors", obj: @user %>
            <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true, data: { turbo: false }) do |f| %>
                <div class="row mb-3">
                    <%= f.label :username, class: "text-light col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                    </div>
                </div>

                <div class="row mb-3">
                    <%= f.label :email, class: "text-light col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter you email adress" %>
                    </div>
                </div>

                <div class="row mb-3">
                    <%= f.label :password, class: "text-light col-2 col-form-label" %>
                    <div class="col-10">
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
                    </div>
                </div>

                <div class="row justify-content-center">
                    <div class="mb-3 col-2">
                        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-light btn-lg") %>
                    </div>
                </div>

            <% end %>
        </div>
        <div class="mb-3 text-center">
            <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info" %>
        </div>
        
    </div>
</div>