<%= render "shared/errors", obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-3 bg-primary rounded", local: true, data: { turbo: false }) do |f| %>
    <div class="row mb-3">
        <%= f.label :name, "Category name", class: "text-light col-2 col-form-label" %>
        <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="mb-3 col-2">
            <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
    </div>

<% end %>